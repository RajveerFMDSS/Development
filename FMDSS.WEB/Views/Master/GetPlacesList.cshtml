@model FMDSS.CustomModels.Models.MasterPlaceModelResponse
@{
    ViewBag.Title = "GetPlacesList";
    Layout = "~/Views/Shared/_LayoutMatarial.cshtml";
}

@*<script src="~/AngularApplication/MasterModule/MasterServices.js"></script>
    <script src="~/AngularApplication/MasterModule/PlaceMaster/PlaceServices.js"></script>
    <script src="~/AngularApplication/MasterModule/PlaceMaster/PlaceCtrl.js"></script>*@

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Place List
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);">Action</a></li>
                            <li><a href="javascript:void(0);">Another action</a></li>
                            <li><a href="javascript:void(0);">Something else here</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body" ng-controller="MasterPlaceController">
                <table class="table table-bordered table-striped table-hover example js-exportable">
                    <thead>
                        <tr>
                            <th>Sr No.</th>
                            <th>District Name</th>
                            <th>Place Name</th>
                            <th>Category</th>
                            <th>Ticket Allocated Per Shift</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var itm in Model.Data)
                        {

                            <tr ng-repeat="itm in GetPlaceLists">
                                <td><span>{{$index+1}}</span></td>
                                <td><span ng-bind="itm.DIST_NAME"></span></td>
                                <td><span ng-bind="itm.PlaceName"></span></td>
                                <td><span ng-bind="itm.Category"></span></td>
                                <td><span ng-bind="itm.TicketAllocatedPerShift"></span></td>
                                <td><span ng-bind="itm.IsActive"></span></td>
                                <td>
                                    <input type="checkbox" id="md_checkbox_22" class="filled-in chk-col-pink" ng-checked="itm.Rowid" />
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>






